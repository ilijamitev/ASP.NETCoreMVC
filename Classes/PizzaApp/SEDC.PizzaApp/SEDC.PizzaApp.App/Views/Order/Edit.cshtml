@model EditOrderViewModel

<h3 class="text-warning">Edit order &numero; @Model.Id</h3>

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.LabelFor(x=>x.Id)
            @Html.DisplayFor(x=>x.Id)
            <br />
            <br />

            @Html.LabelFor(x=>x.IsDelivered)
            @*How to do this with HTML helper ?*@
            <select asp-for="IsDelivered">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            @Html.ValidationMessageFor(x=>x.IsDelivered)
            <br />
            <br />

            @Html.LabelFor(x=>x.FirstName)
            @Html.TextBoxFor(x=>x.FirstName)
            @Html.ValidationMessageFor(x=>x.FirstName)
            <br />
            <br />
            
            @Html.LabelFor(x=>x.LastName)
            @Html.TextBoxFor(x=>x.LastName)
            @Html.ValidationMessageFor(x=>x.LastName)
            <br />
            <br />

            @Html.LabelFor(x=>x.Address)
            @Html.TextBoxFor(x=>x.Address)
            @Html.ValidationMessageFor(x=>x.Address)
            <br />
            <br />

            <button type="submit">Edit Order</button>
        }
    </div>
</div>